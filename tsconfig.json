{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",

    "module": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",

    "typeRoots": ["node_modules/@types", "./dist"],
    "types": ["node", "jest"],

    "declaration": true,
    "declarationMap": true,

    "outDir": "./dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  }
}
